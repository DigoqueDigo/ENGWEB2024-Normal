extends layout

block content

    .w3-card-4
        header.w3-container.w3-teal
            h1 Contrato -  #{contrato.idcontrato}

    each val, key in contrato

        if key != '_id' && key != 'idcontrato'
            .w3-light-grey(style="padding-left: 15px;")
                h3(style="padding-top: 10px;")
                    | #{key}
                p(style="text-align: justify; font-size: 17px; padding-bottom: 10px;")
                    | #{val}

    a(href=voltar , style="text-decoration: none;")
        button.w3-button.w3-block.w3-grey
            | Volar

    footer.w3-container.w3-teal
        h5 Criado por Diogo Marques #{data}